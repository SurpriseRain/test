}
//订单商品明细
function selectW_xsddItem(){
	$("#spitem").html("");
	var XmlData=[{'sqlid':'com.jlsoft.o2o.sql.order.selectW_xsddItem','QryType':'Report','dataType':'Json',"XSDD01":XSDD01}];
	var rData=visit("/jlquery/selecto2o.action",JSON.stringify(XmlData));
	$("#spitem").append('<li ><span class="bm" style="width:90px;">商品条码</span><span class="bm" style="width:50px;">商品图片</span><span class="bm" style="width:250px;">商品名称</span><span class="bm" style="width:50px;">单价</span><span class="bm" style="width:25px;">数量</span><span class=" cz" style="width:100px;">操作</span></li>');
	$(rData).each(function(index,spxxList){
		var picUrl=imgUrl+"/sptp/"+spxxList.ZCXX01+"/"+spxxList.SPXX02+"/images/"+spxxList.SPXX02+"_1_small."+spxxList.SPTP02;
		$("#spitem").append('<li class="tp"><span class="bma" id="abcd" style="width:90px;">'+spxxList.BARCODE+'</span><span class="bma" style="width:50px;"><img style="width: 50px; height:50px;" id="imgUrl'+index+'" src="'+picUrl+'"/></span><span class="bma" style="width:250px;">"'+spxxList.SPXX04+'"</span><span class="bma" style="width:50px;">'+spxxList.XSDDI02+'</span><span class="bma" style="width:25px;">'+spxxList.XSDDI05+'</span><span style="width:100px;"><a href="#" class="ddpj" style="margin-left:40px;" onclick="toSPPJ(\''+spxxList.ZTID+'\',\''+spxxList.SPXX01+'\',\''+spxxList.PJBJ+'\')">评价/晒单</a></span></li>');
		$("#imgUrl"+index).attr("src",picUrl).attr("onerror","this.onerror=null;this.src='/customer/qfy/images/msimg.jpg'");
		if(spxxList.BARCODE==undefined){
			$("#abcd").text("");
		}
		if(spxxList.PJBJ>0){
			$(".ddpj").html("已评价");
		}
		if(DDZT!="6"){
			$(".ddpj").removeAttr("onclick");
			$(".ddpj").css({"color":"#cccccc","margin-left":"40px"});
		}
		 $("img").error(function() {
	        	$(this).attr("src", pubJson.defaultImgUrl);
	        });
		});
}
//评价晒单
function toSPPJ(ZTID,SPXX01,PJBJ){
	parent.ajaxGrid('/customer/qfy/back/ddgl/myhtd_assess_open.html?SPXX01='+SPXX01+'&ZTID='+ZTID+'&XSDD01='+XSDD01+'&PJBJ='+PJBJ+'&XSDD04='+XSDD04);
}
//订单主表信息
function selectW_xsddMain(){
	var XmlData=[{'sqlid':'com.jlsoft.o2o.sql.order.selectW_xsddMain','QryType':'Report','dataType':'Json',"XSDD01":XSDD01}];
	var rDatas=visit("/jlquery/selecto2o.action",JSON.stringify(XmlData));
	rData=rDatas[0];
	if(rData.FPLXX=="普通发票"){
		$("#b").hide();
		$("#c").hide();
	}
	if(rData.FPLXX=="不需要发票"){
		$("#a").hide();
		$("#b").hide();
		$("#c").hide();
		$("#d").hide();
	}
	if(rData!=undefined){
		$("#KHNAME").text(rData.XSDD19);
		$("#XSDD20").text(rData.XSDD20);
		$("#XSDD21").text(rData.XSDD21);
		$("#ZFFS").text(rData.XSDD08);
		$("#PSFS").text(rData.XSDD26);
		$("#XSDD03").text(rData.XSDD03);
		$("#XSDD07").text(rData.XSDD07);
		$("#FPLXX").text(rData.FPLXX);
		$("#FPTT").text(rData.FPTT);
		$("#KHYH").text(rData.xsdd14);
		$("#YHZH").text(rData.xsdd15);
		$("#YJDZ").text(rData.xsdd16);
		$(".dp").html("销售企业 ："+rData.GSXXNAME);
		$("#XSDD02").text(accounting.formatMoney(rData.XSDD02));
		$("#YFJE").text(accounting.formatMoney(rData.XSDD02));
	//	$(".zt").append(eval("changeColumns.W_DJZX02_"+rData.W_DJZX02)); 
	    $(".zt").html("状态："+eval("changeColumns.W_DJZX02_"+rData.W_DJZX02));
	if(rData.W_DJZX02!="3"){
		selectFkxx();
		$("#fkxx").show();//显示付款信息
	}
	selectW_xsddItem();
	}
}
//付款信息
function selectFkxx(){
	var XmlData=[{'sqlid':'com.jlsoft.o2o.sql.order.selectW_XSDDSKFS','QryType':'Report','dataType':'Json',"XSDD01":XSDD01}];
	var rDatas=visit("/jlquery/selecto2o.action",JSON.stringify(XmlData));
	rData=rDatas[0];
	if(rData!=undefined){
	$("#zfdh").text(XSDD01);
	$("#zfly").text(rData.skfs);
	$("#fksj").text(rData.xdsj);
	$("#spje").text(accounting.formatMoney(rData.zfje));
	$("#yfje").text(accounting.formatMoney(rData.zfje));
	$("#zfsj").text(rData.zfsj);
	}
	
	//modify 2015.11.03. 修改支付方式显示
	if(rData.skfs!="线下汇款"){
		$("#zffs").text("在线支付"); 		
	}
	else{
		$("#zffs").text("线下汇款");
	}
}

