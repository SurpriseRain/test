<title>公益品牌</title>
<script type="text/javascript">
var baseUrl = "";	
function AutoScroll(obj){
        $(obj).find("ul:first").animate({
                marginTop:"-25px"
        },500,function(){
                $(this).css({marginTop:"0px"}).find("li:first").appendTo(this);
        });
}
$(document).ready(function(){
setInterval('AutoScroll(".scrollDiv")',1500)
	$("#header").load("/customer/qfy/head.jsp?ss="+Math.random(),function(reponse,status){
		if(status=="success"){
		$(".qtpp").css({"color":"#ff8800"});
		}
	});
	$("#footer").load("/customer/qfy/foot.html?ss="+Math.random());	
	selectcompany();
	selectpinpai();
});

//显示新加入企业信息
function selectcompany() {
	var functionName = "loadcompany";
	var XmlData = [{}];
	var url = baseUrl+"/QFY/selectcompany.action?XmlData="+JSON.stringify(XmlData);
	visitService1(url,functionName);
}

function loadcompany(){
	var data = returnData;
	$(data.list).each(function(index,newsObj){
		if(newsObj.lx == "43") {
			$(".xjrsccj").next().find(".infoList").append("<li><a href='/customer/qfy/showDpxx/shopIndex.html?gsid="+newsObj.zcxx01+"&gsmc="+escape(newsObj.zcxx02)+"'>"+newsObj.zcxx02+"</a></li>");
		}
		
	});	
	$(".new_main > .new_list > .topLoop > .hd > .num > li").click(function(){
		$(this).parent(".num").children("li").removeClass("on");
		$(this).addClass("on");
	  var li_text = $(this).text();
	  var pad_height = $(this).parent(".num").parent(".hd").siblings(".bd").children("ul").css("height");
	  if(li_text == "1"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"0"})  
	  }else if(li_text == "2"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"-300px"})  
	  }else if(li_text == "3"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"-600px"})  
	  }
	})
}

//显示新加入品牌信息
function selectpinpai(){
	var functionName = "loadpinpai";
	var XmlData = [{}];
	var url = baseUrl+"/QFY/selectpinpai.action?XmlData="+JSON.stringify(XmlData);
	visitService1(url,functionName);
}

function loadpinpai(){
	var data = returnData;
	$(data.list).each(function(index,newsObj){
			$(".xjrpp").next().find(".infoList").append("<li><a href='/customer/qfy/showProduct/member_shop.html?ppb01=\""+newsObj.ppb01+"\"'>"+newsObj.ppb02+"</a></li>");
	});	
	$(".new_pinpai > .new_list > .topLoop > .hd > .num > li").click(function(){
	$(this).parent(".num").children("li").removeClass("on");
	$(this).addClass("on");
	var li_text = $(this).text();
	var pad_height = $(this).parent(".num").parent(".hd").siblings(".bd").children("ul").css("height");
	if(li_text == "1"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"0"})  
	}else if(li_text == "2"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"-150px"})  
	}else if(li_text == "3"){
		$(this).parent(".num").parent(".hd").siblings(".bd").children("ul").children("li:first").animate({"margin-top":"-300px"})  
	  }
	})
}
</script>
