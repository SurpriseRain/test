function product(min,max){
	var obj=new Object();
	obj.min=min;
	obj.max=max;
	obj.reg=function(x) {
        return new RegExp("^[1-9]\\d*$").test(x);
    },
    obj.amount=function(obj, mode) {
        var x = $(obj).val();
        if (this.reg(x)) {
            if (mode) {
                x++;
            } else {
                x--;
            }
        } else {
            //alert("请输入正确的数量！");
            dlgShow({content:"请输入正确的数量"});
            $(obj).val(1);
            $(obj).focus();
        }
        return x;
    },
    obj.reduce=function(obj,user,pro) {
        var x = this.amount(obj, false);
        if (x >= this.min) {
        	var returnVal=updatePrudoctNum(x,user,pro);
        	if(returnVal=='1'){
        		 $(obj).val(x);
            	}else{
					//alert("修改失败!");
            		dlgShow({content:"修改失败"});
              }
        } else {
            //alert("商品数量最少为" + this.min);
            dlgShow({content:"商品数量最少为:" + this.min});
            $(obj).val(this.min);
            $(obj).focus();
        }
    },
    obj.add=function(obj,user,pro) {
        var x = this.amount(obj, true);
        if (x <= this.max) {
        	var returnVal=updatePrudoctNum(x,user,pro);
        	if(returnVal=='1'){
        		 $(obj).val(x);
            	}else{
					//alert("修改失败!");
            		dlgShow({content:"修改失败"});
              }
            //recalc();
        } else {
            //alert("商品数量最多为" + this.max);
            /* dlgShow({content:"商品数量最多为" + this.max}); */
            this.max;
            dlgShow({content:"最大购买数量为:"+this.max});
            $(obj).val(this.max);
            $(obj).focus();
        }
    },
    obj.modify=function(obj) {
        var x = $(obj).val();
        if (this.reg(x)) {
			if (x < this.min || x > this.max) {
				$(obj).val(1);
	            $(obj).focus();
	            dlgShow({content:"最大购买数量为:"+this.max});
			}
		} else {
		    dlgShow({content:"请输入正确的数量"});
		    $(obj).val(1);
            $(obj).focus();
		}
       /*  if (x < this.min || x > this.max || !this.reg(x)) {
            //alert("请输入正确的数量！");
            dlgShow({content:"请输入正确的数量"});
            $(obj).val(1);
            $(obj).focus();
        }else{
            } */
    }
    return obj;
}

