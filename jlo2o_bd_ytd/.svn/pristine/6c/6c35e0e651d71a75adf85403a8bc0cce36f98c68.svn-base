.address{ float:left; padding:20px 10px 20px 20px; width:460px; background-color:#fff; border:1px solid #ccc; box-shadow: 1px 1px 3px #eee;}
.address .add_jg{ float:left; width:450px; height:40px; border-bottom:1px solid #ccc; font-size:14px;}
.address .add_jg span{ float:left; line-height:28px; margin-right:5px;}
.address .add_jg label{ float:left; height:25px; line-height:25px; border:1px solid #ccc; padding:0 10px; margin-right:10px; cursor:pointer; display:none;}
.address .add_jg label a{ font-size:15px; margin-left:10px;}
.address .add_jg label:hover{ background-color:#ff8800; border:1px solid #ff8800; color:#fff;}

.address ul{ float:left; width:460px; display:none;}
.address ul li{ float:left; width:80px; height:30px; line-height:30px; text-align:center; border:1px solid #e4e4e4; margin:10px 10px 0 0; font-size:14px;}
.address ul li.title{ width:460px; height:30px; line-height:30px; border:0px; text-align:left; font-size:12px; color:#ccc;}
.address ul li.title:hover{ background-color:#fff;}
.address ul li:hover{ background-color:#eee; cursor:pointer;}
.address ul li.xuan{ background-color:#ff8800; border:1px solid #ff8800; color:#fff;}
.address input{ float:left; width:448px; border:1px solid #ccc; height:40px; line-height:40px; margin:20px 0; padding:0 5px; }
.address .bot{ float:left; width:450px; height:40px; line-height:40px; margin:0px; padding:0px; font-size:16px;}

.address ul#add_main_01{ display:block;}