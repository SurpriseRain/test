<script type="text/javascript">
 var MyCookie =$.cookie('userInfo');
 var usercookie = JSON.parse(MyCookie);
	 var id=$.getUrlParam('id');
 if (usercookie != null){
	 var carOwerId = usercookie.Id;
	 var role = usercookie.Role;
}
 var CurrentPrice="";
 var defaultImgUrl = pubJson.defaultImgUrl;
 $(function(){
	$("#header").load("/customer/qfy/head-08.jsp");
	$("#footer").load("/customer/qfy/foot-08.html?ss="+Math.random());
	selectBarcode(id);//查询商品信息
	if (role == 5) {
		$("#CurrentPrice").html("价格不可见");
		$("#OriginalPrice").html("价格不可见");
	}
	//预约功能
	$(".yuyue").on('click',function(){
		if(usercookie == null){
			window.location.href = "/customer/qfy/register/login.html?type=1";
		}
		if($("#time_start").val() == "" || $("#time_end").val() ==""){
			alert("请选择预约时间！");
			return false;
		}
		else if($("#time_start").val() > $("#time_end").val()){
			alert("预约时间：开始时间不能大于结束时间！");
			return false;
		}
		var time_start = $("#time_start").val(); 
		var time_end = $("#time_end").val();
		var obj = $("input[type='radio']:checked").val();
		var xmlData=[{"ServiceId":id,"UserId":carOwerId,"TotailPrice":CurrentPrice,"OrderServiceStartTime":time_start,"OrderServiceEndTime":time_end,"IsVisit":obj}];
		var url="/Oper_OrderService/insertOrderService.action?json="+JSON.stringify(xmlData);
		ajaxQ({
			"url" : url,//原始url 
			"callback" : function(data){
				if(data.STATE=="success"){
					alert("预约成功!");
				}else{
					alert("预约失败!");
				}
			}
		});
	});
	
    $(".info-right-bottom > div").css({"display":"none"});										   
    $(".xq").css({"display":"block"}); 
	$("h2").click(function(){	
		$("h2").removeClass("xuan");
		$(this).addClass("xuan");	   
		var h2text = $(this).text();
		if(h2text == "商品详情"){
			$(".info-right-bottom > div").css({"display":"none"});
			$(".xq").show();
		}
		if(h2text == "商品评价"){
			$(".info-right-bottom > div").css({"display":"none"});
			$(".pj").show();
		}
	});
	
});

//查询商品信息
function selectBarcode(id){
	var json = [{"id":id}];
	var Url='/FWSP/selectFWSP.action?json='+JSON.stringify(json);;
	var rData0 = visitService(Url);
	$("#serviceName").html(rData0.ServiceName);
	//商品售价
	CurrentPrice = rData0.CurrentPrice
	$("#CurrentPrice").html(accounting.formatMoney(CurrentPrice));
	$("#OriginalPrice").html(accounting.formatMoney(rData0.OriginalPrice));
	//套餐类型
	$("#ServerType").html(rData0.ServerTypeName);
	//供货商
	$("#ZCXX02").html(rData0.ZCXX02);
	$("#Title").attr("src","/jlsoft/fftp/fwsp/"+rData0.ServiceTitlePicturePath).attr("onerror","this.onerror=null;this.src='/customer/qfy/images/ad.jpg'" );;
	$("#Detail").attr("src","/jlsoft/fftp/fwsp/"+rData0.ServiceDetailPicturePath).attr("onerror","this.onerror=null;this.src='/customer/qfy/images/ad.jpg'" );;
 }

</script>
