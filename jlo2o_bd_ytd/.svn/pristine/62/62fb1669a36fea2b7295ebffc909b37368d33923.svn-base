		//	$("#houtaigl").append('<a class="left no4" href="/customer/back/Main.jsp">后台管理</a>');			
		//} 
		$("#regist").remove();
		//$("#loginP").html(usercookie.ZCXX02).css("width","100px");
		if(usercookie.LX=='24'){//个人
			$("#loginP").text(usercookie.XTCZY01);
		}else{//企业
			$("#loginP").text(usercookie.ZCXX02);
		}
		$("#loginP").attr('href','/customer/sydjt/showDpxx/shopAllGoods.html?gsid='+usercookie.ZCXX01+'&gsmc='+escape(usercookie.ZCXX02));
		$("ul.login").hide();
	}else{			
		location.href="/customer/sydjt/index.html";
	}
}

