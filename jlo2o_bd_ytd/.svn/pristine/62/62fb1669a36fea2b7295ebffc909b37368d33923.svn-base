//检查是否已登录
function showUser(){
	if(usercookie!=null){
		$("#ext").attr("style","display:black").attr("href","javascript:void(0)").on("click",function(){
			//清除cookie
			$.cookie('userInfo',null,{path:"/"});  
			window.location="/customer/sydjt/index.html";
		});
