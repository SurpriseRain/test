body{ margin:0 auto; font-size:12px; padding:0px; color:#3c3c3c;}
ul,li{ margin:0px; padding:0px; list-style:none;}
.clear{ clear:both;}
a{ cursor:pointer}

table.dyryqx{width:99%;  border-collapse: collapse; margin:10px auto;}
table tr{text-align:center;  line-height:40px; border-bottom:1px solid #ccc;}

