function checkNull(){
	if ($("#sqgs").val() =="" || $("#sqgs").val().length == 0) {
		tse("sqgs","申请企业名称不能为空！");
		return false;
	}
	if ($("#gsmc").val() =="" || $("#gsmc").val().length == 0) {
		tse("gsmc","申请企业名称不能为空！");
		return false;
	}
	if ($("#ppmc").val() =="" || $("#ppmc").val().length == 0) {
		tse("sqgs","申请企业名称不能为空！");
		return false;
	}
	
	if ($("#file1").val() != "" || $("#file1").val().length != 0) {
		  if(!tpCheck("file1")){
			  tse('logots',"图片不能大于1M");
			  return false;
		  }else{
			  ts('logots');
		  }
	}
	if ($("#file2").val() != "" || $("#file2").val().length != 0){
		  if(!tpCheck("file2")){
			  tse('ppzmts',"图片不能大于1M");
			  return false;
		  }else{
			  ts('ppzmts');
		  }
	}
	if ($("#jzrq").val()== "" || $("#jzrq").val().length == 0) {
		tse('jzrq',"申请截止日期不能为空");
		return false;
	}else{
		if (!checkDate($("#jzrq").val(),'jzrq')) {
			tse('jzrq',"日期不能小于当前日期");
			return false;
		}
	} 
	if ($("#endTime").val()== "" || $("#endTime").val().length == 0) {
		tse('endTime',"商标截止日期不能为空");
		return false;
	}else{
		if (!checkDate($("#endTime").val(),'endTime')) {
			tse('endTime',"日期不能小于当前日期");
			return false;
		}
	} 
	var flcStr="";
	var flc=$("input[name='flc']:checked").each(function(o){
		if("" == flcStr){
			flcStr = $(this).val();
		} else {
			flcStr = flcStr + "," + $(this).val();
		}
	});
	if(flcStr == ""){
		tse("flts","请选择所属分类！");
		return false;
	} else {
		$("#ppfl").val(flcStr);
		ts("flts");
	}
	return true;
}


// 检日期
function checkDate(val, cls){
	var chDate = val;  
	var now = new Date();  
	var nowDate =  now.getFullYear() + "-" + (now.getMonth() + 1) + "-" + now.getDate(); 
	var d1 = new Date(chDate.replace(/\-/g, "\/"));  
	var d2 = new Date(nowDate.replace(/\-/g, "\/")); 
	if(d1 > d2){
		ts(cls);
		return true;
	} else {
		tse(cls, "日期不能小于当前日期");
		return false;
	}
}

