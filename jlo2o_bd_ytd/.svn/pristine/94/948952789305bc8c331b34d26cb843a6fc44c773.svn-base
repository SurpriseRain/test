//品牌名称验证
function checkPPName(name){
	var ppName = $.trim(name);
	if(ppName != "" && ppName.length > 0){
		if(ppName == $("#ppmc").val()){
			ts("ppmc");
		} else {
			var jsonData = [{"PPMC" : ppName}];
			var url = "/Oper_PPGL/selectPPMC.action?jsonData=" + escape(JSON.stringify(jsonData));
			var rData = visitService(url);
			if(rData.STATE == "1"){
				if(rData.COUNT > 0){
					tse("ppmc","该品牌名称已存在!");
					return false;
				} else {
					ts("ppmc");
				}
			}
		}
	} else {
		tse("ppmc","请输入名称!");
	}
}

