/***
cart
***/
.content{ max-width:1000px !important;}
.cart_filter_bar li{ float:right;}
.cart_filter_bar li:first-child{ float:left;}
.cart_filter_bar li span{ font-size:18px;}
.cart_filter_bar li.xuan span{ color:#e84d1c;}
.cart_filter_bar li b{ font-size:15px; margin-left:5px; color:#e84d1c;}
.cart_filter_bar li input[type="button"]{ padding:2px 7px; font-size:12px; margin:0px; margin-left:10px; float:none;}

.cart_thead{ height:40px; line-height:40px; border:1px solid #e1e1e1; margin-top:10px; background-color:#f5f5f5;}
.cart_thead dl{ padding:0 10px;}
.cart_thead dt input{ float:none; margin-right:5px;}

.cart_case{ margin-top:10px; position:relative; padding-bottom:60px;}
.cart_title{ height:35px;}
.cart_title dl{ padding:0 10px; position:relative;}
.cart_title dt{ position:absolute; top:6px; left:10px;}
.cart_title dd{ font-size:16px; line-height:30px; margin-left:30px;}

.cart_list{ border-top:2px solid #999;}
.cart_list .xuan{ background-color:#fff4e8;}
.cart_list dl{ padding:15px 10px; position:relative; border:1px solid #e1e1e1; border-top:0;}
.cart_list dt{ position:absolute; top:15px; left:10px;}
.cart_list .pro_img{ margin-left:30px;}
.cart_list .pro_img img{ border:1px solid #eee;}
.cart_list .pro_name{ margin-left:10px;}
.cart_list .pro_name a:hover{ color:#e84d1c; text-decoration:underline;}
.cart_list .pro_pic{color: #e84d1c; font-size:14px;}
.cart_list .pro_form i{ float:left; border:1px solid #e1e1e1; width:25px; height:25px; line-height:25px; text-align:center; font-size:20px; margin-top:0px; background-color:#fff;}
.cart_list .pro_form i:hover{ background-color:#f5f5f5; cursor:pointer;}
.cart_list .pro_form input[type="text"]{ width:50px; height:25px; border:1px solid #e1e1e1; margin:0px -1px; text-align:center; text-indent:0px;}
.cart_list .pro_cz a:hover{ color:#e84d1c; text-decoration:underline;}

.cart_end{ height:50px; background-color:#eee; float:left; width:1000px; position:absolute; bottom:0px;}
.cart_fixed{ position:fixed; z-index:2;}
.cart_end dl{ padding:0 0 0 10px; line-height:50px;}
.cart_end input{ float:none; margin-right:5px;}
.cart_end dd a{ margin-right:10px;}
.cart_end dd input[type="button"]{ float:right; height:50px; line-height:50px; padding:0px 40px; margin:0px; font-size:20px;}
.cart_end dd b{ font-size:15px; margin-left:5px; color:#e84d1c;}
.cart_end dd i{ margin-left:5px;}
