<script type="text/javascript">

//初始化数据
$(document).ready(function(){
	indate();
});

function indate(){
	var MyCookie = $.cookie('userInfo');
	var userCookie = JSON.parse(MyCookie);
	//加载地址信息
	showDQXX("QY");
	//初始化数据
	var zcxx01=userCookie.ZCXX01;
//【注意：待修改---------------------】目前只有安迅物流一个：写死 AXWL【注意：待修改---------------------】
	var AXWL = "AXWL";
	var json = {"zcxx01":AXWL};
	var url = "/UserInfo/select_QYFGFW.action?XmlData=" + JSON.stringify(json);
	var returnData=visitService(url);
	var u =returnData.resultList;
	
	if(u[0].dqbzm01 == null){
	}else{
		for (var i = 0; i < u.length; i++) {
			//添加
			if(u[i].SF == null){
				$(".single_table").append(" <tr   id='"+u[i].dqbzm01+"'> <td style='width: 150px;'><span style='width: 145px;'>区域：</span></td> 	<td style='width: 550px;'><input value='"+u[i].SJ+"'   class='lx' name='"+u[i].dqbzm01+"' readonly='readonly' style='width: 300px;' /> <label class='caozuo finalDo' onclick='cle("+u[i].dqbzm01+");'>删除</label><div class='tishis'></div></td></tr>");
			}else{
				$(".single_table").append(" <tr   id='"+u[i].dqbzm01+"'> <td style='width: 150px;'><span style='width: 145px;'>区域：</span></td> 	<td style='width: 550px;'><input value='"+u[i].SF+""+u[i].SJ+"'   class='lx' name='"+u[i].dqbzm01+"' readonly='readonly' style='width: 300px;' /> <label class='caozuo finalDo' onclick='cle("+u[i].dqbzm01+");'>删除</label><div class='tishis'></div></td></tr>");
			}
		}
	}
	//初始化 之前数据的样式
	ts('tishis');
}

function ok(){
	//标示 0 表示有值 1 表示
	var yjbs = 1 ;
	//所有的覆盖区域的值
	$('.lx').each(function(){
		//获取第一级或者二级值
		var p = $(this).attr("name")
			//进入循环表明有值	
			return yjbs = 0;
	});
	if(yjbs == 1 ){
		tse('tishi','不能为空!');
		return false;
	}else{
		//所有的覆盖区域的值
		var str = "";
		$('.lx').each(function(){
			//获取第一级或者二级值
			var p = $(this).attr("name")
			//获取对应的value值
			var v = $(this).val(); 
			str += p +"-"+v+",";
		});
	    //去掉最后一个逗号(如果不需要去掉，就不用写)
	    if (str.length > 0) {
	        str = str.substr(0, str.length - 1);
	    }
	    var MyCookie = $.cookie('userInfo');
		var userCookie = JSON.parse(MyCookie);
		//var zcxx01=userCookie.ZCXX01;
	    //var XmlData=[{"array":str},{"zcxx01":zcxx01}];
//【注意：待修改---------------------】目前只有安迅物流一个：写死 AXWL【注意：待修改---------------------】
		var AXWL = "AXWL";
		//生产和物流自行设置的辐射区域 默认type为0
		var type = 0;
		//用于后台java类进行判断是物流还是生产、经销企业
		var lx = 1; //表示物流
	    var XmlData=[{"array":str},{"zcxx01":AXWL},{"type":type},{"lx":lx}];
	    var url="/Oper_FSFW/insert_SCFSFW.action?XmlData="+JSON.stringify(XmlData);
	    var rData=visitService(url);
	    if(rData.STATE==0){
	        	alert("操作成功!");
	        	//location.reload();
	        }else{
	        	alert("操作失败!");
	        }
	}
}
function tse(className,txt){
	$('.' + className).html('<label class="errTs">'+txt+'</label>');
	var $tsxx=$(className + 'label');
	$tsxx.removeClass();
	$tsxx.addClass('errTs');
	$('.' + className).css({'width':'auto','margin-top':'10px'});
}
//添加按钮
function tj(){
	//一级不能为空
	var sf = $("#provinceQY").val();
	if(sf == 0){
		tse('tishi','请选择省份/市级!');
		return false;
	}else{
		ts('tishi');
	}
	//省份
	var sfm = $("#provinceQY").find("option:selected").text();
	//标示 0 表示存在 1 表示不存在
	//判断 选择了省份，就不能选择省份下面的市级
	var yjbs = 1;
	//所有的覆盖区域的值
	$('.lx').each(function(){
		//获取第一级或者二级值
		var p = $(this).attr("name")
		if(sf == p){
			return yjbs = 0;
		}
	});
	
	if(yjbs == 0){
		//alert("选择的市级单位已有上级");
		tse('tishi','已选择对应的省份辐射区域!');
	}else{
		//市级
		var sjm = $("#cityQY").find("option:selected").text();
		var sj = $("#cityQY").val();
		//标识符 1：没有重复  0表示重复了
		var pd = 1;
		if(sj == 0){
			//表示只选择的省级
			var vlm = sfm;
			var vl=sf; 
			//所有的覆盖区域的值
			$('.lx').each(function(){
				//获取第一级或者二级值
				var p = $(this).attr("name")
				if(vl == p){
					
					return pd = 0;
				}
			});
		}else{
			//表示选择的是市级
			var vlm = sfm + sjm ;
			var vl=sj;
			//所有的覆盖区域的值
			$('.lx').each(function(){
				//获取第一级或者二级值
				var p = $(this).attr("name")
				if(vl == p){
					
					return pd = 0;
				}
			});
		}
		if(pd ==0){
			tse('tishi','选择的辐射范围重复!');
			
		}else{
			//添加
			$(".single_table").append(" <tr   id='"+vl+"'> <td style='width: 150px;'><span style='width: 145px;'>区域：</span></td> 	<td style='width: 550px;'><input  value='"+vlm+"'   class='lx' name='"+vl+"' readonly='readonly' style='width: 300px;' /> <label class='caozuo finalDo' onclick='cle("+vl+");'>删除</label><div class='tishis'></div></td></tr>");
			ts('tishis');
		}
		
	}
}
//删除
function cle(obj){
	$("#"+obj+"").remove();
}
//加载地址信息
function showDQXX(id){
  $("#province"+id).parent().children("select").each(function(index){
  	if(index==0){
  	  var num=0;
  	  var dqjb=1;
  	  var dqxx=dqxxList(num,dqjb);
  	  $(dqxx).each(function(i,dqxxjson){
  		$("#province"+id).append("<option>"+dqxxjson.DQXX02+"</option>");
  		$("#province"+id).find("option").eq(i+1).val(dqxxjson.DQXX01);
  	  });		 
  	  $(this).bind("change",function(inx){
  		setVal(this,"#city"+id,2);
  	  });	
  	}
    if(index==1){
  	  var dqjb=2;
  	  $(this).bind("change",function(inx){
  		setVal(this,"#country"+id,3);
  	  });	
  	}
    if(index==2){
	   	  $(this).bind("change",function(inx){
	   		setVal(this,"#street"+id,4);
	   	  });	
	   	}
  });
}

//展示地址信息
function dqxxList(num,dqjb){
  	var xmlData=[];
  	var json={};
    json.qydm=num;
	json.dqjb=dqjb;
  	xmlData.push(json);
  	var url="/oper_qydz/qryDQ.action?XmlData="+JSON.stringify(xmlData);
  	var data=visitService(url);
  	return data.mapList;
}

//设置地址信息
function setVal(objnow,objaft,dqjb){
  	var num=$(objnow).find("option:selected").val();
  	var list=dqxxList(num,dqjb);
  	$(list).each(function(i,json){
  		if(i==0){
  	 		$(objaft).empty();
  	  		$(objaft).append("<option value='0'>请选择</option>");
    	}
  		$(objaft).append("<option>"+json.DQXX02+"</option>");
  		$(objaft).find("option").eq(i+1).val(json.DQXX01);
  	});
}
</script>
