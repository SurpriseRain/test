<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>jlo2o_bd</param-value>
    </context-param>
	<servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.jlsoft.utils.config.initServlet</servlet-class>
        <load-on-startup>200</load-on-startup>
    </servlet>
    
    <!-- 附近上传支持PPTX格式 -->
	<mime-mapping>
		<extension>pptx</extension>
		<mime-type>application/vnd.openxmlformats</mime-type>
	</mime-mapping>
	
	<!-- 生成验证码-->
	<servlet>
		<servlet-name>CaptchaOutput</servlet-name>
		<servlet-class>com.jlsoft.utils.CaptchaOutputServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CaptchaOutput</servlet-name>
		<url-pattern>/servlet/CaptchaOutput</url-pattern>
	</servlet-mapping>
	<!-- excel导出-->
	<servlet>
		<servlet-name>DownLoadExcel</servlet-name>
		<servlet-class>com.jlsoft.utils.DownLoadExcel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DownLoadExcel</servlet-name>
		<url-pattern>/servlet/DownLoadExcel</url-pattern>
	</servlet-mapping>
	<!-- 图片上传 -->
	<servlet>
		<servlet-name>TpUploadServlet</servlet-name>
		<servlet-class>com.jlsoft.utils.TpUploadServlet</servlet-class>
	</servlet>
	<!-- 公共打印 -->
     <servlet>
       <servlet-name>PubPrtDocument</servlet-name>
       <servlet-class>com.jlsoft.o2o.print.PubPrtDocument</servlet-class>
     </servlet>
     <servlet>
    	<servlet-name>GridPageDataServlet</servlet-name>
    	<servlet-class>com.jlsoft.utils.GridPageDataServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
		<servlet-name>TpUploadServlet</servlet-name>
		<url-pattern>/servlet/TpUploadServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
       <servlet-name>PubPrtDocument</servlet-name>
       <url-pattern>/PubPrtDocument</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
       <servlet-name>GridPageDataServlet</servlet-name>
       <url-pattern>/GridPageDataServlet</url-pattern>
    </servlet-mapping>
	<session-config>
		<session-timeout>180</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>customer/qfy/index.html</welcome-file>
	</welcome-file-list>
	<!-- log4j配置方案-->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
    <error-page> 
	    <error-code>400</error-code>  
	    <location>/customer/qfy/error_url.jsp</location>  
    </error-page> 
    <error-page>
	    <error-code>403</error-code>
	    <location>/customer/qfy/error_url.jsp</location>
    </error-page> 
    <error-page>  
	    <error-code>404</error-code>  
	    <location>/customer/qfy/error_url.jsp</location>  
    </error-page>  
    <error-page>  
	    <error-code>500</error-code>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>  
    <error-page>  
	    <error-code>503</error-code>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>  
    <error-page>  
	    <error-code>504</error-code>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>
    <error-page>  
	    <exception-type>java.lang.Exception</exception-type>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>  
    <error-page>
	    <exception-type>java.lang.NullPointerException </exception-type>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>  
    <error-page>  
	    <exception-type>javax.servlet.ServletException</exception-type>  
	    <location>/customer/qfy/error.jsp</location>  
    </error-page>
</web-app>